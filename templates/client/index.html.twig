{% extends 'base.html.twig' %}

{% block body %}
<!-- Tableau des Clients -->
<div class="flex w-full h-screen justify-center items-center bg-gradient-to-r from-red-500 to-red-700"> <!-- Fond en dégradé -->
    <div class=" w-3/5 bg-blue-900 rounded-lg shadow-lg flex flex-col  space-y-8 ml-48 items-center p-10"> <!-- Conteneur principal -->
        <h2 class="text-2xl text-center font-bold text-gray-800">Gestion des Clients</h2>

        <div class="flex justify-between"> <!-- Conteneur du formulaire et de la liste -->
            <!-- Formulaire -->
            <div class="w-1/2 bg-gray-100 border border-gray-300 rounded-lg p-6 shadow-md"> 
                <h3 class="text-xl mb-4 text-center font-semibold text-gray-800">Ajouter un Client</h3>
                <form class="space-y-4">
                    <div>
                        <label for="first-name" class="block text-gray-600">Prénom</label>
                        <input type="text" id="first-name" name="first-name" required
                            class="w-full p-3 rounded bg-gray-200 border border-gray-400 focus:outline-none focus:border-blue-500" />
                    </div>
                    <div>
                        <label for="last-name" class="block text-gray-600">Nom</label>
                        <input type="text" id="last-name" name="last-name" required
                            class="w-full p-3 rounded bg-gray-200 border border-gray-400 focus:outline-none focus:border-blue-500" />
                    </div>
                    <div>
                        <label for="phone" class="block text-gray-600">Téléphone</label>
                        <input type="tel" id="phone" name="phone" required
                            class="w-full p-3 rounded bg-gray-200 border border-gray-400 focus:outline-none focus:border-blue-500" />
                    </div>
                    <div>
                        <label for="address" class="block text-gray-600">Adresse</label>
                        <textarea id="address" name="address" required
                            class="w-full p-3 rounded bg-gray-200 border border-gray-400 focus:outline-none focus:border-blue-500 resize-none h-24"></textarea>
                    </div>
                    <button type="submit"
                        class="w-full bg-blue-600 text-white p-3 rounded hover:bg-blue-800 transition duration-300">Soumettre</button>
                </form>
            </div>

            <!-- Liste des Clients -->
            <div class="w-1/2 bg-gray-100 border border-gray-300 rounded-lg p-6 shadow-md ml-16"> 
                <h3 class="text-xl mb-4 text-center font-semibold text-gray-800">Liste des Clients</h3>
                <table class="min-w-full text-left text-sm">
                    <thead class="bg-gray-300">
                        <tr>
                            <th class="py-2 px-4 text-gray-800">Prénom</th>
                            <th class="py-2 px-4 text-gray-800">Nom</th>
                            <th class="py-2 px-4 text-gray-800">Téléphone</th>
                            <th class="py-2 px-4 text-gray-800">Adresse</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-gray-200">
                            <td class="py-2 px-4 text-gray-800">Jean</td>
                            <td class="py-2 px-4 text-gray-800">Dupont</td>
                            <td class="py-2 px-4 text-gray-800">0123456789</td>
                            <td class="py-2 px-4 text-gray-800">10 rue de Paris</td>
                        </tr>
                        <tr class="bg-gray-300">
                            <td class="py-2 px-4 text-gray-800">Marie</td>
                            <td class="py-2 px-4 text-gray-800">Curie</td>
                            <td class="py-2 px-4 text-gray-800">0987654321</td>
                            <td class="py-2 px-4 text-gray-800">20 avenue de Lyon</td>
                        </tr>
                        <!-- Ajoutez d'autres clients ici -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




{% endblock %}